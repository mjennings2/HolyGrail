package com.bayviewglen.unitone;

import java.util.Scanner;

public class DebuggerExample {
	private int test;
	static int searchValue;
	
	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		DebuggerExample ex = new DebuggerExample();
		ex.test = 7;
		int[] numbers = new int[5];

		// length on an array returns the length of the array
		System.out.println("Length of the array is: " + numbers.length);

		numbers[0] = 10;
		numbers[1] = 20;
		numbers[2] = 30;
		numbers[3] = 40;
		numbers[4] = 50;

		// Display all of the element in the array each on its own line
		for (int i = 0; i < numbers.length; ++i) {
			System.out.println("Index " + i + ": Element: " + numbers[i]);
		}

		ex.searchValue = 1;

		while (searchValue != -999) {
			System.out.print("Please enter a number to search for (-999 to quit): ");
			searchValue = scanner.nextInt();

			int location = search(numbers, searchValue);
			if (location != -1) {
				System.out.println(searchValue + " was found at index "
						+ location);
			} else if (searchValue != -999){
				System.out.println(searchValue + " was not found!");
			}
		}
		
		System.out.print("See ya!");

	}

	public static int search(int[] list, int value) {
		int index = -1;

		for (int i = 0; i < list.length && index == -1; ++i) {
			if (value == list[i])
				index = i;
		}

		return index;

	}

}